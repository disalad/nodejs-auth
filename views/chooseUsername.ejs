<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs', {title: user.username}) %>
    <link rel="stylesheet" href="/css/profile.css" />
    <body>
        <%- include("partials/nav.ejs"), {user: user} %>
        <div class="container height-100 d-flex justify-content-center align-items-center">
            <div class="card text-center">
                <div class="py-4 p-2">
                    <form
                        action="/profile/choose-username"
                        method="POST"
                        enctype="multipart/form-data"
                    >
                        <!-- Alert Box -->
                        <% if (messages.error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= messages.error %>
                        </div>
                        <% } %>
                        <div
                            class="alert alert-danger hidden alert-dismissible fade show"
                            role="alert"
                        ></div>
                        <!-- Input Fields -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Choose a username</label>
                            <input
                                type="text"
                                name="name"
                                id="name"
                                class="form-control"
                                value="<%= user.username %>"
                            />
                        </div>
                        <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip">
                            <button name="submitBtn" type="submit" class="btn btn-primary">
                                Save
                            </button></span
                        >
                    </form>
                </div>
            </div>
        </div>
        <script src="/js/chooseUsername.js"></script>
    </body>
</html>
