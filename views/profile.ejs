<!DOCTYPE html>
<html lang="en">
    <% if (guestProfile) { %> <%- include('partials/header.ejs', {title: guestProfile.username}) %>
    <% } else { %> <%- include('partials/header.ejs', {title: user.username}) %> <% } %>
    <link rel="stylesheet" href="/css/profile.css" />
    <body>
        <%- include("partials/nav.ejs"), {user: user} %>
        <div class="container height-100 d-flex justify-content-center align-items-center">
            <% if (guestProfile) { %>
            <div class="card text-center">
                <div class="py-4 p-2">
                    <div>
                        <img
                            src="<%= guestProfile.imgUrl %>"
                            class="rounded"
                            width="100"
                            alt="<%= guestProfile.username %>"
                        />
                    </div>
                    <div class="mt-3 d-flex flex-column justify-content-center">
                        <h5><%= guestProfile.username %></h5>
                        <h6 class="fw-light fst-italic"><%= guestProfile.bio %></h6>
                        <h6><%= guestProfile.email %></h6>
                    </div>
                    <% if (user && user.email === guestProfile.email) { %>
                    <a href="/profile/edit" class="btn btn-primary mt-3">Edit</a>
                    <% } %>
                </div>
            </div>
            <% } else { %>
            <div class="card text-center">
                <div class="py-4 p-2">
                    <div>
                        <img
                            src="<%= user.imgUrl %>"
                            class="rounded"
                            width="100"
                            alt="<%= user.username %>"
                        />
                    </div>
                    <div class="mt-3 d-flex flex-column justify-content-center">
                        <h5><%= user.username %></h5>
                        <h6 class="fw-light fst-italic"><%= user.bio %></h6>
                        <h6><%= user.email %></h6>
                    </div>
                    <a href="/profile/edit" class="btn btn-primary mt-3">Edit</a>
                </div>
            </div>
            <% } %>
        </div>
    </body>
</html>
