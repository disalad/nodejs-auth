<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header.ejs', {title: "Log in"}) %>
    <link rel="stylesheet" href="/css/form.css" />
    <body>
        <%- include("partials/nav.ejs") %>
        <div class="jumbotron d-flex align-items-center form-jumbroton">
            <div class="container form-container">
                <form>
                    <div class="text-center social-btn">
                        <a href="/auth/google" class="btn btn-danger btn-block d-flex"
                            ><img
                                src="https://res.cloudinary.com/df1unjmwz/image/upload/v1643375450/google-brands_zrfgwv.svg"
                                alt="Google"
                                class="google-img"
                            />
                            Sign in with Google
                        </a>
                    </div>
                    <hr />
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input
                            id="email"
                            name="email"
                            placeholder="example@example.com"
                            type="text"
                            required="required"
                            class="form-control"
                        />
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input
                            id="password"
                            name="password"
                            placeholder="xxxxxx"
                            type="text"
                            required="required"
                            class="form-control"
                        />
                    </div>
                    <div class="form-group">
                        <button name="submit" type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
